{
  "extends": "@ponder/core/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/generated": ["./.ponder/generated/index.ts"]
    }
  },
  "include": ["src/**/*", "ponder.config.ts"],
  "exclude": ["node_modules", ".ponder"]
}