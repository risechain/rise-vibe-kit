{
  "name": "rise-vibe-kit",
  "version": "0.1.0",
  "description": "A template for building dApps on RISE with Foundry and Next.js",
  "private": true,
  "scripts": {
    "chain": "cd contracts && anvil --fork-url https://testnet.riselabs.xyz/",
    "sync-contracts": "node scripts/sync-contracts.js",
    "sync-contracts:update": "node scripts/sync-contracts-update.js",
    "deploy-and-sync": "./scripts/deploy-and-sync.sh",
    "deploy-and-sync:verify": "./scripts/deploy-and-sync.sh -v",
    "deploy-and-update": "./scripts/deploy-and-update.sh",
    "deploy-and-update:verify": "./scripts/deploy-and-update.sh -v",
    "verify": "./scripts/verify.sh",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:contracts": "cd contracts && forge build",
    "test": "cd contracts && forge test",
    "test:frontend": "cd frontend && npm test",
    "clean": "cd contracts && forge clean && cd ../frontend && rm -rf .next",
    "postinstall": "node scripts/install-forge-deps.js && cd frontend && npm install",
    "vercel-deploy": "./scripts/deploy-vercel.sh",
    "vercel-deploy:preview": "./scripts/deploy-vercel.sh -e preview",
    "vercel-deploy:force": "./scripts/deploy-vercel.sh -f",
    "vercel-deploy:verbose": "./scripts/deploy-vercel.sh -v",
    "vercel-setup": "cd frontend && vercel . --confirm",
    "vercel-env": "cd frontend && vercel env ls",
    "vercel-logs": "cd frontend && vercel logs",
    "vercel-domains": "cd frontend && vercel domains ls",
    "ponder:sync": "node scripts/sync-ponder-config.js",
    "ponder:dev": "cd ponder && npm run dev",
    "ponder:start": "cd ponder && npm run start",
    "validate": "node scripts/validate-setup.js",
    "setup": "./scripts/setup.sh",
    "dev:all": "concurrently -n \"CHAIN,DEPLOY,FRONTEND\" -c \"yellow,blue,green\" \"npm run chain\" \"npm run watch-deploy\" \"npm run dev\"",
    "watch-deploy": "node scripts/watch-deploy.js",
    "reset": "rm -rf contracts/out contracts/cache frontend/.next frontend/node_modules node_modules",
    "reset:cache": "rm -rf contracts/out contracts/cache frontend/.next",
    "test:integration": "./scripts/test-integration.sh",
    "test:e2e": "cd frontend && npm run test:e2e"
  },
  "keywords": ["rise", "blockchain", "dapp", "foundry", "nextjs"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}